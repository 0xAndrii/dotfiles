#!/bin/bash
# Minimal .bashrc

# Environment
export EDITOR='hx'
export VISUAL='hx'
export PATH="$HOME/.local/bin:$HOME/bin:$PATH"

# Essential aliases
alias zj='zellij'
alias claude="$HOME/.claude/local/claude"

# Eza aliases (minimal)
alias ls='eza --group-directories-first'
alias ll='eza -laag@ --group-directories-first'
alias lt='eza -lg --git -T --hyperlink --header --level=2'
alias la='eza -la --sort=modified --reverse'

# fnm (Node.js)
if [ -d "$HOME/.local/share/fnm" ]; then
    export PATH="$HOME/.local/share/fnm:$PATH"
    eval "$(fnm env --use-on-cd)"
fi
