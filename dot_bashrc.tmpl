#!/bin/bash
# Minimal .bashrc

# Environment
export EDITOR='hx'
export VISUAL='hx'
export PATH="$HOME/.local/bin:$HOME/bin:$PATH"

# Essential aliases
alias zj='zellij'
alias claude="$HOME/.claude/local/claude"

# Eza aliases (minimal)
alias ls='eza --group-directories-first --time-style=long-iso'
alias ll='eza --long --all --all --group --extended --group-directories-first --time-style=long-iso'
alias lt='eza --long --group --git --tree --hyperlink --header --level=2 --time-style=long-iso --group-directories-first'
alias la='eza --long --all --group --extended --sort=modified --reverse --time-style=relative'
